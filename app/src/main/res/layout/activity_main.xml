<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonallcomunas"
        tools:layout_editor_absoluteX="33dp" />
    <Button
        android:id="@+id/buttonLascondes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filtrar"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/buttonallcomunas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Todas las comunas"
        app:layout_constraintTop_toBottomOf="@+id/buttonLascondes"
        tools:layout_editor_absoluteX="0dp" />



</androidx.constraintlayout.widget.ConstraintLayout>